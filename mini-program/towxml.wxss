/* towxml.wxss */
/* Custom styles for towxml components to ensure proper rendering */

/* Global towxml container styles */
.h2w {
  font-size: 14px !important;
  line-height: 1.6 !important;
  word-wrap: break-word !important;
  word-break: normal !important;
  text-align: left !important;
  color: #333 !important;
  padding: 0 !important;
  margin: 0 !important;
  overflow-x: hidden !important;
}

/* Fix spacing between elements */
.h2w__p {
  margin: 0 0 10px 0 !important;
  padding: 0 !important;
  display: block !important;
  word-wrap: break-word !important;
  word-break: normal !important;
  text-align: left !important;
  line-height: 1.6 !important;
}

/* Ensure inline elements don't have weird spacing */
.h2w__span,
.h2w__text,
.h2w__strong,
.h2w__em,
.h2w__code {
  display: inline !important;
  vertical-align: baseline !important;
  white-space: normal !important;
  word-wrap: break-word !important;
  word-break: normal !important;
}

/* Table styles - fixed to ensure proper rendering */
.h2w__table {
  width: 100% !important;
  border-collapse: collapse !important;
  border: 1px solid #ddd !important;
  margin: 10px 0 !important;
  table-layout: fixed !important;
  display: table !important; /* Force table display */
  box-sizing: border-box !important;
}

.h2w__thead {
  display: table-header-group !important;
}

.h2w__tbody {
  display: table-row-group !important;
}

.h2w__tr {
  border-bottom: 1px solid #ddd !important;
  display: table-row !important;
}

.h2w__th, .h2w__td {
  border: 1px solid #ddd !important;
  padding: 8px !important;
  text-align: left !important;
  display: table-cell !important;
  word-break: break-word !important;
  box-sizing: border-box !important;
}

.h2w__th {
  background-color: #f2f2f2 !important;
  font-weight: bold !important;
}

/* List styles - fixed for proper bullet point rendering */
.h2w__ul, .h2w__ol {
  margin: 10px 0 !important;
  padding-left: 20px !important;
  display: block !important;
  list-style-position: outside !important;
}

.h2w__ul {
  list-style-type: disc !important;
}

.h2w__ol {
  list-style-type: decimal !important;
}

.h2w__li {
  margin: 5px 0 !important;
  padding-left: 5px !important;
  display: list-item !important;
  text-align: left !important;
  list-style-position: outside !important;
}

/* Fix for bullet points */
.h2w__li::before {
  content: '' !important;
  display: inline-block !important;
  width: 5px !important;
  height: 5px !important;
  margin-right: 5px !important;
  vertical-align: middle !important;
}

.h2w__ul .h2w__li::before {
  border-radius: 50% !important;
  background-color: #333 !important;
}

.h2w__ol .h2w__li::before {
  content: none !important;
}

/* Line break styles */
.h2w__p {
  margin: 10px 0;
  line-height: 1.5;
}

/* Code block styles */
.h2w__pre {
  background-color: #f5f5f5;
  padding: 10px;
  border-radius: 4px;
  overflow-x: auto;
  margin: 10px 0;
}

.h2w__code {
  font-family: monospace;
  white-space: pre-wrap;
}

/* Inline code */
.h2w__inline-code {
  background-color: #f5f5f5;
  padding: 2px 4px;
  border-radius: 3px;
  font-family: monospace;
}

/* Blockquote */
.h2w__blockquote {
  border-left: 4px solid #ddd;
  padding-left: 10px;
  color: #666;
  margin: 10px 0;
}

/* Image */
.h2w__img {
  max-width: 100%;
  height: auto;
  margin: 10px 0;
}

/* Horizontal rule */
.h2w__hr {
  border: none;
  border-top: 1px solid #ddd;
  margin: 15px 0;
}

/* Ensure proper spacing between elements */
.h2w {
  padding: 5px;
  font-size: 14px;
  line-height: 1.5;
}
