/* chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #FFFFFF;
  padding-bottom: env(safe-area-inset-bottom);
  overflow-x: hidden;
  width: 100%;
}

/* Message list */
.message-list {
  flex: 1;
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
  --assistant-message-bg: white;
  overflow-y: auto;
}

/* Error message */
.error-container {
  background-color: #FEE6E6;
  border-radius: var(--border-radius);
  padding: 12px;
  margin: 10px 0;
  animation: fadeIn 0.3s ease;
  width: 100%;
}

.error-message {
  color: #D32F2F;
  font-size: 14px;
}

.error-reset {
  margin-top: 6px;
  color: #0062CC;
  font-size: 12px;
  text-align: right;
}

/* Welcome container */
.welcome-container {
  padding: 20px 10px;
  animation: fadeIn 0.5s ease;
  width: 100%;
}

.welcome-message {
  font-size: 18px;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 8px;
}

.welcome-desc {
  font-size: 14px;
  color: var(--text-color);
  margin-bottom: 16px;
}

/* Suggestions */
.suggestions-container {
  margin: 10px 0;
  width: 100%;
}

.suggestions-label {
  font-size: 14px;
  color: #666666;
  margin-bottom: 8px;
}

.suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  width: 100%;
}

.suggestion-chip {
  background-color: var(--secondary-color);
  color: var(--primary-color);
  padding: 8px 12px;
  border-radius: 16px;
  font-size: 14px;
  display: inline-block;
  margin-bottom: 8px;
}

/* Towxml overrides */
.towxml-container {
  width: 100%;
}

/* Fix base text styles */
.towxml-container .h2w {
  line-height: 1.4;
  font-size: 28rpx;
}

/* Fix list spacing */
.towxml-container .h2w__ul,
.towxml-container .h2w__ol {
  margin-bottom: 8rpx;
  padding-left: 1rem;
}

.towxml-container .h2w__li {
  margin: 0;
  line-height: 1.4;
}

/* Fix paragraph spacing */
.towxml-container .h2w__p {
  margin: 4rpx 0;
  line-height: 1.4;
}

/* Fix heading spacing */
.towxml-container .h2w__h1,
.towxml-container .h2w__h2,
.towxml-container .h2w__h3,
.towxml-container .h2w__h4,
.towxml-container .h2w__h5,
.towxml-container .h2w__h6 {
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

/* Message container */
.message-container {
  display: flex;
  padding: 0;
  margin: 0;
  width: 100%;
}

.message-container.assistant {
  display: flex;
  align-items: flex-start;
  padding: 0;
  margin: 0;
  width: 100%;
  background-color: white;
  margin-bottom: 8px;
}

.message-container.user {
  display: flex;
  justify-content: flex-end;
  padding: 0;
  margin: 8px 0;
  width: 100%;
}

.avatar {
  width: 28px;
  height: 28px;
  position: absolute;
  left: 8px;
  top: 10px;
}

.user .avatar {
  right: 16px;
  margin-top: 4px;
  display: none; /* Hide user avatar for OpenAI style */
}

.assistant-avatar {
  left: 0;
  margin-left: 8px;
  margin-top: 8px;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.message-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-width: 0;
  box-sizing: border-box;
}

.assistant .message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 0;
  width: 100%;
  min-width: 0;
}

.user .message-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 0;
  margin: 0;
  min-width: 0;
}

.message-bubble {
  font-size: 14px;
  line-height: 1.5;
  width: 100%;
  box-sizing: border-box;
  overflow-wrap: break-word;
}

.message-bubble.assistant-bubble {
  width: 100%;
  padding: 4px 16px;
  margin: 0;
  border-radius: 0;
  background: none;
  display: block;
  position: relative;
}

.message-bubble.user-bubble {
  display: inline-block;
  width: auto;
  max-width: 80%;
  padding: 10px 12px;
  margin: 0 16px;
  background-color: #F0F0F0;
  border-radius: 12px;
  border-top-right-radius: 4px;
}

.message-text {
  white-space: pre-wrap;
  word-break: normal;
  word-wrap: break-word;
  overflow-wrap: break-word;
  width: 100%;
  display: block;
}

.assistant-bubble .message-text {
  width: 100%;
  display: block;
  white-space: pre-wrap;
  word-break: normal;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.user .message-text {
  white-space: pre-wrap;
  word-break: break-word;
}

.text-container {
  position: relative;
  display: flex;
  align-items: flex-start;
  width: 100%;
  padding-right: 28px;
}

.message-text {
  flex: 1;
  white-space: pre-wrap;
  word-break: break-word;
  word-wrap: break-word;
  overflow-wrap: break-word;
}



/* Rich content styles */
.rich-content {
  width: 100%;
}

/* Towxml container styles */
.towxml-container {
  position: relative;
  width: 100%;
  padding: 0;
  margin: 0;
}

.towxml-container .h2w {
  width: 100%;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  line-height: 1.5;
}

.towxml-container .h2w > * {
  width: 100%;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  line-height: inherit;
}

/* Reset towxml base styles */
.towxml-container .h2w {
  font-size: 14px;
  line-height: 1.5;
  word-break: normal;
  white-space: pre-wrap;
  overflow-wrap: break-word;
}

/* Ensure paragraphs are properly aligned */
.towxml-container .h2w__p {
  margin: 0;
  padding: 0;
  width: 100%;
}

/* Fix code block alignment */
.towxml-container .h2w__pre {
  margin: 10px 0;
  padding: 10px;
  width: 100%;
  box-sizing: border-box;
  background-color: #f6f8fa;
  border-radius: 6px;
  overflow-x: auto;
}

/* Fix inline code alignment */
.towxml-container .h2w__code {
  background-color: rgba(175,184,193,0.2);
  padding: 0.2em 0.4em;
  border-radius: 6px;
  font-size: 85%;
  font-family: ui-monospace,SFMono-Regular,SF Mono,Menlo,Consolas,Liberation Mono,monospace;
}

/* Fix table styles */
.towxml-container .h2w__table {
  width: 100%;
  border-collapse: collapse;
  margin: 10px 0;
  display: table;
  overflow-x: auto;
}

.towxml-container .h2w__tr {
  border-bottom: 1px solid #ddd;
  display: table-row;
}

.towxml-container .h2w__th,
.towxml-container .h2w__td {
  border: 1px solid #ddd;
  padding: 8px;
  text-align: left;
  display: table-cell;
}

.towxml-container .h2w__th {
  background-color: #f2f2f2;
  font-weight: bold;
}

/* Fix list styles */
.towxml-container .h2w__ul,
.towxml-container .h2w__ol {
  margin: 10px 0;
  padding-left: 20px;
  display: block;
}

.towxml-container .h2w__li {
  margin: 5px 0;
  display: list-item;
}

/* Fix line break styles */
.towxml-container .h2w__p {
  margin: 10px 0;
  line-height: 1.5;
  display: block;
}

/* Ensure code blocks scroll horizontally when needed */
.markdown-code-block {
  max-width: 100%;
  overflow-x: auto;
}

/* Make lists display properly */
.markdown-list {
  margin: 8px 0;
}

.markdown-list-item {
  display: flex;
  margin: 4px 0;
}

.user .message-bubble {
  background-color: var(--user-message-bg);
  border-top-right-radius: 4px;
  margin-right: 0;
  width: 100%;
}

.assistant .message-bubble {
  background-color: var(--assistant-message-bg);
  border-top-left-radius: 4px;
  margin-left: 0;
  width: 100%;
}

.message-actions {
  display: flex;
  align-items: center;
  margin-top: -4px;
  padding: 0 16px;
}

.copy-icon {
  width: 16px;
  height: 16px;
}

/* Typing indicator */
.typing-container {
  display: flex;
  margin-bottom: 16px;
  width: 100%;
}

.typing-indicator {
  display: flex;
  align-items: center;
  background-color: var(--assistant-message-bg);
  padding: 12px 16px;
  border-radius: var(--border-radius);
  border-top-left-radius: 4px;
  width: 100%;
}

.typing-dot {
  width: 8px;
  height: 8px;
  background-color: #666666;
  border-radius: 50%;
  margin: 0 2px;
}

.typing-dot:nth-child(1) {
  animation: bounce 1s infinite 0.1s;
}
.typing-dot:nth-child(2) {
  animation: bounce 1s infinite 0.2s;
}
.typing-dot:nth-child(3) {
  animation: bounce 1s infinite 0.3s;
}

/* Input container */
.input-container {
  display: flex;
  padding: 10px 15px;
  border-top: 1px solid var(--light-gray);
  background-color: #FFFFFF;
  align-items: flex-end;
  transition: padding 0.2s ease;
  width: 100%;
}

.input-container.focused {
  padding-top: 8px;
  padding-bottom: 8px;
}

.message-input {
  flex: 1;
  width: auto;
  min-height: 40px;
  max-height: 200px; /* Allow room for ~10 lines */
  border-radius: 20px;
  background-color: var(--light-gray);
  padding: 10px 12px;
  font-size: 14px;
  line-height: 20px;
  box-sizing: border-box;
  overflow-y: auto; /* Enable scrolling when content exceeds max height */
  white-space: pre-wrap;
  word-break: break-word;
  /* Fix for vertical expansion issues on first line wrap */
  margin: 0;
  display: block;
  width: 100%;
}

.input-placeholder {
  color: #999999;
}

button.send-button {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background-color: #CCCCCC;
  margin-left: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s ease;
  padding: 0;
  min-height: unset;
  line-height: normal;
  border: none;
  box-shadow: none;
  font-size: 0;
}

button.send-button::after {
  border: none;
}

button.send-button.active {
  background-color: var(--primary-color);
}

.send-icon {
  width: 0;
  height: 0;
  border-top: 6px solid transparent;
  border-bottom: 6px solid transparent;
  border-left: 10px solid white;
  margin-left: 3px;
}

.bottom-space {
  height: 10px;
}
