/* chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #FFFFFF;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Message list */
.message-list {
  flex: 1;
  padding: 10px 15px;
  overflow-y: auto;
}

/* Error message */
.error-container {
  background-color: #FEE6E6;
  border-radius: var(--border-radius);
  padding: 12px;
  margin: 10px 0;
  animation: fadeIn 0.3s ease;
}

.error-message {
  color: #D32F2F;
  font-size: 14px;
}

.error-reset {
  margin-top: 6px;
  color: #0062CC;
  font-size: 12px;
  text-align: right;
}

/* Welcome container */
.welcome-container {
  padding: 20px 10px;
  animation: fadeIn 0.5s ease;
}

.welcome-message {
  font-size: 18px;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 8px;
}

.welcome-desc {
  font-size: 14px;
  color: var(--text-color);
  margin-bottom: 16px;
}

/* Suggestions */
.suggestions-container {
  margin: 10px 0;
}

.suggestions-label {
  font-size: 14px;
  color: #666666;
  margin-bottom: 8px;
}

.suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.suggestion-chip {
  background-color: var(--secondary-color);
  color: var(--primary-color);
  padding: 8px 12px;
  border-radius: 16px;
  font-size: 14px;
  display: inline-block;
  margin-bottom: 8px;
}

/* Message container */
.message-container {
  display: flex;
  margin-bottom: 16px;
  animation: fadeIn 0.3s ease;
  width: 100%;
}

.message-container.user {
  flex-direction: row-reverse;
  justify-content: flex-end;
}

.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 8px;
  flex-shrink: 0;
}

.user .avatar {
  margin-left: 8px;
  margin-right: 0;
}

.assistant .avatar {
  margin-right: 8px;
  margin-left: 0;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.message-content {
  max-width: 75%;
  display: flex;
  flex-direction: column;
}

.user .message-content {
  align-items: flex-end;
}

.assistant .message-content {
  align-items: flex-start;
}

.message-bubble {
  padding: 10px 12px;
  border-radius: var(--border-radius);
  font-size: 14px;
  line-height: 1.5;
  word-wrap: break-word;
  max-width: 100%;
}

/* Rich content styles */
.rich-content {
  width: 100%;
}

/* Ensure code blocks scroll horizontally when needed */
.markdown-code-block {
  max-width: 100%;
  overflow-x: auto;
}

/* Make lists display properly */
.markdown-list {
  margin: 8px 0;
}

.markdown-list-item {
  display: flex;
  margin: 4px 0;
}

.user .message-bubble {
  background-color: var(--user-message-bg);
  border-top-right-radius: 4px;
  margin-right: 0;
}

.assistant .message-bubble {
  background-color: var(--assistant-message-bg);
  border-top-left-radius: 4px;
  margin-left: 0;
}

.message-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 4px;
}

.copy-button {
  font-size: 12px;
  color: #666666;
  padding: 4px 8px;
}

/* Typing indicator */
.typing-container {
  display: flex;
  margin-bottom: 16px;
}

.typing-indicator {
  display: flex;
  align-items: center;
  background-color: var(--assistant-message-bg);
  padding: 12px 16px;
  border-radius: var(--border-radius);
  border-top-left-radius: 4px;
}

.typing-dot {
  width: 8px;
  height: 8px;
  background-color: #666666;
  border-radius: 50%;
  margin: 0 2px;
}

.typing-dot:nth-child(1) {
  animation: bounce 1s infinite 0.1s;
}
.typing-dot:nth-child(2) {
  animation: bounce 1s infinite 0.2s;
}
.typing-dot:nth-child(3) {
  animation: bounce 1s infinite 0.3s;
}

/* Input container */
.input-container {
  display: flex;
  padding: 10px 15px;
  border-top: 1px solid var(--light-gray);
  background-color: #FFFFFF;
  align-items: center;
}

.message-input {
  flex: 1;
  height: 40px;
  border-radius: 20px;
  background-color: var(--light-gray);
  padding: 0 15px;
  font-size: 14px;
}

.input-placeholder {
  color: #999999;
}

.send-button {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background-color: #CCCCCC;
  margin-left: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s ease;
}

.send-button.active {
  background-color: var(--primary-color);
}

.send-icon {
  width: 0;
  height: 0;
  border-top: 6px solid transparent;
  border-bottom: 6px solid transparent;
  border-left: 10px solid white;
  margin-left: 3px;
}

.bottom-space {
  height: 10px;
}
